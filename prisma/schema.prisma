generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(cuid())
  name  String
  email String @unique
}

model Brewery {
  id      String @id @default(cuid())
  name    String
  address String
  lng     Float
  lat     Float
  beers   Beer[]
}

model Beer {
  id          String        @id @default(cuid())
  breweryId   String
  brewery     Brewery       @relation(fields: [breweryId], references: [id])
  name        String
  year        JBAIterations
  description String
}

enum JBAIterations {
  JBA2025
  JBA2026
}
